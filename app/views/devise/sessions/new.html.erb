<div class="max-w-7xl mx-auto mt-5 md:mt-0 border-gray md:col-span-2">
  <div class="text-center items-center mb-6 bg-white dark:bg-gray-900">
    <h1 class="title">Se connecter</h1>
  </div>

  <div class="form w-auto">
    <div class=" m-4 bg-white sm:p-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>

          <div class="col-span-6">
            <%= f.label :password, "Mot de passe", class: "label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col-span-6">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "text-sm" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>

    <div class="text-center pb-8 px-4 sm:px-4 mt-6 lg:pb-8 lg:px-8 lg:items-center">
      <div class="inline-flex rounded-md shadow">
        <%= f.submit "Se connecter", class: "btn-1" %>
      </div>
      <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
