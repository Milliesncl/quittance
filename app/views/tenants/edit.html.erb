<div class="max-w-7xl mx-auto mt-5 md:mt-0 border-gray md:col-span-2">
  <div class="text-center items-center mb-6 bg-white dark:bg-gray-900">
    <h1 class="title">Editer un locataire - <%= @tenant.name %></h1>
  </div>
  <div class="form">
    <div class="m-4 bg-white sm:p-6">
      <%= simple_form_for [@tenant] do |f| %>
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <label for="name" class="label">Pr√©nom et nom</label>
              <%= f.input :name, label: false, autocomplete: :name, placeholder: "Nom", input_html: { class: "input" } %>
          </div>
          <div class="col-span-6">
            <label for="address" class="label">Adresse</label>
              <%= f.input :address, label: false, as: :search, autocomplete: :address, id: "tenant_address", input_html: { class: "input" } %>
          </div>
          <div class="col-span-3">
            <label for="rent" class="label">Loyer (&euro;)</label>
              <%= f.input :rent, label: false, as: :integer, wrapper: false, hint: false, placeholder: "Loyer", input_html: { class: "input" } %>
          </div>
          <div class="col-span-3">
            <label for="charges" class="label">Charges (&euro;)</label>
              <%= f.input :charges, label: false, as: :integer, placeholder: "Charges", input_html: { class: "input" } %>
          </div>
        </div>
    </div>
  </div>
    <div class="text-center pb-8 px-4 sm:px-4 mt-6 lg:pb-8 lg:px-8 lg:items-center">
      <div class="inline-flex rounded-md shadow">
        <%= f.submit "Ajouter un.e locataire", class: "btn-1" %>
      </div>
    </div>
<% end %>
</div>
