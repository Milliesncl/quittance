<div >
  <div class="text-center max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:pt-8 pb-4 lg:px-8 lg:items-center lg:justify-between">
    <h1 class="title">Mes locataires</h1>
  </div>

    <div class="max-w px-4 py-4 mx-auto">
      <div class="sm:grid sm:grid-flow-row sm:gap-4 sm:grid-cols-3">
        <% @tenants.each do |tenant| %>

        <div id="jh-stats-positive" class="flex flex-col justify-center mx-2 px-6 py-6 bg-white border border-gray-50 shadow rounded">
          <div>
            <div class="flex items-center justify-end gray text-md">
              <%= link_to edit_tenant_path(tenant.id) do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </div>
            <p class="text-md"><%= tenant.name%></p>
            <p><%= tenant.address %></p>
            <p><%= "A payer : #{tenant.rent + tenant.charges}€" %></p>
          </div>
        </div>
  <% end %>

      </div>
    </div>

  <div class="py-6 text-center">

    <div class="inline-flex rounded-md shadow">
      <%= link_to "Créer un nouveau locataire", new_tenant_path, class: "btn-1" %>
    </div>
    <div class="lg:ml-3 md:ml-3 inline-flex rounded-md shadow">
      <%= link_to "Créer une quittance", new_receipt_path, class: "btn-2" %>
    </div>
  </div>
</div>
