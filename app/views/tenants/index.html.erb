<h1>Tous mes locataires</h1>
<% @tenants.each do |tenant| %>
  <div class="card">
    <%= tenant.name %>
    <br>
    <%= tenant.address %>
    <br>
    <%= "A payer : #{tenant.rent + tenant.charges}€" %>
  </div>
<% end %>
<%= link_to "Créer un nouveau locataire", new_tenant_path, class: "btn" %>
<%= link_to "Créer une quittance", new_receipt_path, class: "btn" %>
