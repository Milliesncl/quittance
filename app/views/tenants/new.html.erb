<h1>Nouveau locataire</h1>
<%= simple_form_for [@tenant] do |f| %>
  <div class="form-group">
    <%= f.input :name, label: false, as: :text, placeholder: "Nom" %>
    <%= f.input :address, label: false, as: :text, placeholder: "Adresse" %>
    <%= f.input :rent, label: false, as: :text, placeholder: "Loyer" %>
    <%= f.input :charges, label: false, as: :text, placeholder: "Charges" %>
  </div>
  <div class="task-btn">
    <%= f.submit "Ajouter un.e locataire"%>
  </div>
<% end %>
